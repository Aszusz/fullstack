{
  "name": "fullstack",
  "version": "1.0.0",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "pass": "npm run format && npm run lint && npm run typecheck",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "docker:up:all": "docker compose -f docker/docker-compose.yml --profile tools up -d",
    "docker:reset": "docker compose -f docker/docker-compose.yml down -v && docker compose -f docker/docker-compose.yml up -d",
    "db:push": "npm run db:push -w @fullstack/db",
    "db:studio": "npm run db:studio -w @fullstack/db"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/compat": "^2.0.2",
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "prettier": "3.8.1",
    "prettier-plugin-gherkin": "^3.1.3",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript-eslint": "^8.53.1"
  }
}
